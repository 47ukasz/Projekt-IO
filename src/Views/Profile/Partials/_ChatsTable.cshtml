@model List<projekt_io.Models.ChatListItemViewModel>

<section class="panel-section">
    <h3>Moje czaty</h3>

    @if (Model == null || Model.Count == 0)
    {
        <p>Brak czatów.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Z kim</th>
                    <th>Ostatnia wiadomość</th>
                    <th>Data</th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.OtherUserDisplay</td>
                        <td>@c.LastMessagePreview</td>
                        <td>@(c.LastMessageAt?.ToLocalTime().ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/chat/@c.ChatId">Otwórz</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
