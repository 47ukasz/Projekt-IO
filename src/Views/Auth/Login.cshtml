@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <title>Login</title>
</head>
<body>
<div class="container container-login">
    <div class="container-box">
        <h1 class="header header-login">Witaj z powrotem!</h1>
        <p class="text-muted text-muted-login">Zaloguj się aby kontynuować</p>
    </div>
    <div class="container-box">
        <form asp-controller="Auth" asp-action="Login" method="POST">
            @Html.AntiForgeryToken()
            <div class="input-box">
                <label asp-for="Email">Adres e-mail</label>
                <input
                    asp-for="Email"
                    type="text"
                    placeholder="Wpisz swój adres e-mail"/>
            </div>
            <div class="input-box">
                <label asp-for="Password">Hasło</label>
                <input
                    asp-for="Password"
                    type="password"
                    placeholder="Wpisz swoje hasło"/>
            </div>
            <div asp-validation-summary="All" class="form-validation"></div>
            <div class="button-box">
                <button class="btn btn-primary">Zaloguj się</button>
                <a href="/register" class="btn btn-outline" role="button">Zarejestruj się</a>
            </div>
        </form>
        @if (TempData["Success"] != null) {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Info"] != null) {
            <div class="alert alert-info">
                @TempData["Info"]
            </div>
        }

        @if (TempData["Error"] != null) {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }
    </div>
</div>
</body>
</html>
